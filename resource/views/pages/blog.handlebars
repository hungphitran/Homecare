    <!-- Thay thế hai script block trùng lặp bằng một script block duy nhất ở cuối file -->
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        // Header Scroll Effect
        const headers = document.querySelector("#blog-header");
        window.addEventListener("scroll", () => {
            headers.classList.toggle("shadow", window.scrollY > 0);
        });

        // Mobile Menu Toggle
        const navMenu = document.getElementById('nav-menu');
        const navToggle = document.getElementById('mobile-menu-toggle');

        if (navToggle) {
            navToggle.addEventListener('click', () => {
                navMenu.classList.toggle('active');

                // Change icon based on menu state
                const icon = navToggle.querySelector('i');
                if (navMenu.classList.contains('active')) {
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-times');
                } else {
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
        }

        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
            if (navToggle && !navToggle.contains(e.target) && !navMenu.contains(e.target) && navMenu.classList.contains('active')) {
                navMenu.classList.remove('active');
                const icon = navToggle.querySelector('i');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
            }
        });

        // Filter Functionality
        $(document).ready(function () {
            $(".blog-filter-item").click(function () {
                const value = $(this).attr("data-filter");

                if (value == "all") {
                    $(".blog-post-card").show("500");
                } else {
                    $(".blog-post-card").each(function () {
                        const postType = $(this).attr("data-type");
                        if (postType === value) {
                            $(this).show("500");
                        } else {
                            $(this).hide("500");
                        }
                    });
                }

                // Active class handling
                $(this).addClass("active-filter").siblings().removeClass("active-filter");

                // Hide no results message
                document.getElementById("no-results").style.display = "none";

                // Check if any posts are visible
                setTimeout(() => {
                    const visiblePosts = $(".blog-post-card:visible").length;
                    if (visiblePosts === 0) {
                        document.getElementById("no-results").style.display = "block";
                    }
                }, 510);
            });
        });

        // Get search item element
        const searchItem = document.getElementById("search-item");

        // Search Functionality
        if (searchItem) {
            searchItem.addEventListener("keyup", function () {
                const searchValue = this.value.toUpperCase();
                const blogPosts = document.querySelectorAll(".blog-post-card");
                const noResults = document.getElementById("no-results");

                // Hiển thị tất cả bài viết khi tìm kiếm
                const hiddenPosts = document.querySelectorAll('.hidden-post');
                hiddenPosts.forEach(post => {
                    post.classList.remove('hidden-post');
                });

                // Ẩn nút "Xem thêm" khi đang tìm kiếm
                const showMoreBtn = document.getElementById('show-more-btn');
                if (showMoreBtn) showMoreBtn.style.display = 'none';

                let hasResults = false;

                blogPosts.forEach(post => {
                    const title = post.querySelector(".post-title").textContent.toUpperCase();
                    const description = post.querySelector(".post-description").textContent.toUpperCase();

                    if (title.includes(searchValue) || description.includes(searchValue)) {
                        post.style.display = "";
                        hasResults = true;
                    } else {
                        post.style.display = "none";
                    }
                });

                // Show "No Results" message if needed
                if (!hasResults && searchValue !== "") {
                    if (noResults) noResults.style.display = "block";
                } else {
                    if (noResults) noResults.style.display = "none";
                }

                // Reset active filter
                if (searchValue !== "") {
                    document.querySelectorAll(".blog-filter-item").forEach(item => {
                        item.classList.remove("active-filter");
                    });
                } else {
                    document.querySelector('[data-filter="all"]').classList.add("active-filter");
                    resetPostDisplay();
                }
            });
        }

        // Form Submit Prevention
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', (e) => {
                if (!form.classList.contains('needs-validation')) {
                    e.preventDefault();
                }
            });
        });

        // Hàm khôi phục trạng thái hiển thị ban đầu
        function resetPostDisplay() {
            // Hiển thị lại nút "Xem thêm"
            const showMoreBtn = document.getElementById('show-more-btn');
            if (showMoreBtn) showMoreBtn.style.display = 'flex';

            // Ẩn lại các bài viết sau 9 bài đầu tiên
            const allPosts = document.querySelectorAll(".blog-post-card");
            allPosts.forEach((post, index) => {
                if (index >= 9) {
                    post.classList.add('hidden-post');
                } else {
                    post.classList.remove('hidden-post');
                }
            });
        }

        // Show More Functionality
        document.addEventListener('DOMContentLoaded', function () {
            const showMoreBtn = document.getElementById('show-more-btn');
            if (showMoreBtn) {
                const hiddenPosts = Array.from(document.querySelectorAll('.hidden-post'));
                const postsPerLoad = 6; // Hiển thị thêm 6 bài mỗi lần nhấn

                showMoreBtn.addEventListener('click', function () {
                    // Hiệu ứng loading
                    this.classList.add('loading');
                    this.querySelector('span').textContent = 'Đang tải...';
                    this.querySelector('i').className = 'fas fa-spinner';

                    // Giả lập thời gian tải
                    setTimeout(() => {
                        // Lấy các bài viết ẩn cần hiển thị
                        const postsToShow = hiddenPosts.splice(0, postsPerLoad);

                        // Hiển thị từng bài với hiệu ứng fade
                        postsToShow.forEach((post, index) => {
                            setTimeout(() => {
                                post.classList.remove('hidden-post');
                                post.style.opacity = '0';
                                post.style.transform = 'translateY(20px)';
                                post.style.transition = 'opacity 0.5s ease, transform 0.5s ease';

                                setTimeout(() => {
                                    post.style.opacity = '1';
                                    post.style.transform = 'translateY(0)';
                                }, 50);
                            }, index * 150);
                        });

                        // Quay lại trạng thái ban đầu của nút
                        this.classList.remove('loading');
                        this.querySelector('span').textContent = 'Xem thêm bài viết';
                        this.querySelector('i').className = 'fas fa-chevron-down';

                        // Nếu không còn bài viết ẩn
                        if (hiddenPosts.length === 0) {
                            this.classList.add('all-loaded');
                            this.querySelector('span').textContent = 'Đã hiển thị tất cả';
                            this.querySelector('i').className = 'fas fa-check';

                            // Ẩn nút sau 2 giây
                            setTimeout(() => {
                                this.style.opacity = '0';
                                setTimeout(() => {
                                    this.style.display = 'none';
                                }, 500);
                            }, 2000);
                        }
                    }, 800);
                });
            }
        });
    </script>
