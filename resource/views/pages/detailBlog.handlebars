<script>
  document.addEventListener('DOMContentLoaded', function () {
    const showMoreBtn = document.getElementById('show-more-btn');
    if (showMoreBtn) {
      const hiddenPosts = document.querySelectorAll('.hidden-post');
      const postsPerLoad = 3;
      let postsShown = 3;

      // Ẩn nút nếu không có bài viết ẩn
      if (hiddenPosts.length === 0) {
        showMoreBtn.style.display = 'none';
      }

      showMoreBtn.addEventListener('click', function () {
        // Thêm hiệu ứng loading
        this.classList.add('loading');
        this.querySelector('i').className = 'fas fa-spinner';

        // Giả lập loading (tạo hiệu ứng tải)
        setTimeout(() => {
          // Hiển thị thêm bài viết
          let shown = 0;
          hiddenPosts.forEach((post, index) => {
            if (index < postsShown - 3 + postsPerLoad && index >= postsShown - 3) {
              post.classList.remove('hidden-post');

              // Hiệu ứng fade in
              post.style.opacity = 0;
              setTimeout(() => {
                post.style.opacity = 1;
                post.style.transition = 'opacity 0.5s ease';
              }, shown * 100);
              shown++;
            }
          });

          postsShown += postsPerLoad;

          // Bỏ hiệu ứng loading
          this.classList.remove('loading');
          this.querySelector('i').className = 'fas fa-chevron-down';

          // Nếu đã hiển thị tất cả
          if (postsShown >= 3 + hiddenPosts.length) {
            this.classList.add('all-loaded');
            this.querySelector('span').textContent = 'Đã hiển thị tất cả';
            this.querySelector('i').className = 'fas fa-check';

            // Ẩn nút sau 2 giây
            setTimeout(() => {
              this.style.display = 'none';
            }, 2000);
          }
        }, 800); // Đợi 800ms để tạo hiệu ứng loading
      });
    }
  });
</script>
