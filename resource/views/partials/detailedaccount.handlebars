                'assigned': { class: 'status-assignedHistoryDetailHomeKare', icon: '<i class="fas fa-user-check"></i>', text: 'Đã xác nhận' },
                'pending': { class: 'status-pendingHistoryDetailHomeKare', icon: '<i class="fas fa-clock"></i>', text: 'Chờ xác nhận' },
