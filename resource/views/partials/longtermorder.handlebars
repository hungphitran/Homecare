    }

    /* Style cho nút Today */
    .fc .fc-button-primary:not(:disabled).fc-button-active,
    .fc .fc-button-primary:not(:disabled):active {
        background-color: #45a049 !important;
        border-color: #45a049 !important;
    }

    /* Style cho header */
    .fc-toolbar-title {
