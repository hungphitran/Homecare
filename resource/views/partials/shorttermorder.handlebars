    document.addEventListener('DOMContentLoaded', function () {
            // Get references to time inputs
            const startTimeHidden = document.querySelector('.start-time-input-short');
            const endTimeHidden = document.querySelector('.end-time-input-short');
            const startTimeList = document.getElementById('start-time-list');
            const endTimeList = document.getElementById('end-time-list');

            // Handle time selection for start time
            startTimeList.addEventListener('click', (e) => {
                if (e.target.classList.contains('time-option-homecare')) {
                    const selectedTime = e.target.dataset.value;
                    startTimeHidden.value = selectedTime;
                    console.log('Start time selected:', selectedTime); // Debug log

                    // Enable end time selection after start time is picked
                    document.getElementById('end-time-input').style.pointerEvents = 'auto';
                    document.getElementById('end-time-input').style.opacity = '1';
                }
            });

            // Handle time selection for end time 
            endTimeList.addEventListener('click', (e) => {
                if (e.target.classList.contains('time-option-homecare')) {
                    const selectedTime = e.target.dataset.value;
                    endTimeHidden.value = selectedTime;
                    console.log('End time selected:', selectedTime); // Debug log
                }
            });

            // Form validation before submit
            const form = document.querySelector('form');
            form.addEventListener('submit', function (e) {
                if (!startTimeHidden.value || !endTimeHidden.value) {
                    e.preventDefault();
                    alert('Vui lòng chọn cả thời gian bắt đầu và kết thúc');
                    return;
                }

                // Validate end time is after start time
                if (endTimeHidden.value <= startTimeHidden.value) {
                    e.preventDefault();
                    alert('Thời gian kết thúc phải sau thời gian bắt đầu');
                    return;
                }

                console.log('Form submitting with times:', {
                    startTime: startTimeHidden.value,
                    endTime: endTimeHidden.value
                });
            });
        });
   </script>
