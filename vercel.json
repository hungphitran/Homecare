{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node@18",
            "config": {
                "includeFiles": [
                    "public/**",
                    "resource/**",
                    "views/**",
                    "db/**",
                    "routes/**",
                    "controllers/**",
                    "middlewares/**",
                    "models/**",
                    "services/**",
                    "helpers/**",
                    "utils/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ],
    "functions": {
        "index.js": {
            "maxDuration": 30,
            "runtime": "nodejs18.x"
        }
    },
    "env": {
        "NODE_ENV": "production"
    }
}